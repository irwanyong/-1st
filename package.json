{
  "name": "1st",
  "scripts": {
    "bootstrap": "bun install",
    "format": "biome check --write --unsafe",
    "lint": "biome check",
    "clean": "rm -rf node_modules && bun run --workspaces clean",
    "apps:dev": "bun run --filter='./apps/*' dev",
    "apps:start": "bun run --filter='./apps/*' start",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "husky": "9.1.7",
    "bun-types": "catalog:runtime"
  }
}
