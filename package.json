{
  "name": "1st",
  "scripts": {
    "bootstrap": "bun install",
    "clean": "rm -rf node_modules && bun run --workspaces clean",
    "format": "biome check --write --unsafe",
    "lint": "biome check",
    "prepare": "husky"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "database"
    ],
    "catalogs": {
      "runtime": {
        "bun-types": "1.3.0",
        "@types/node": "24.7.2"
      },
      "api": {
        "@elysiajs/eden": "1.4.4",
        "elysia": "1.4.12"
      },
      "client": {
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "babel-plugin-react-compiler": "1.0.0",
        "@types/react": "19.2.0",
        "@types/react-dom": "19.2.0"
      }
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "husky": "9.1.7"
  }
}
